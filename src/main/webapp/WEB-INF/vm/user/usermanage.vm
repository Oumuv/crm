<link href="#springUrl('/css/bootstrap-select.min.css')"
	rel="stylesheet">
<script src="#springUrl('/js/bootstrap-select.min.js')"></script>

<div class="bg_shadow charts_a"
	style="width: 100%; height: 100%; border-radius: 8px 8px 8px 8px; padding: 10px 10px 10px 10px;">
	<!-- 筛选 -->
	<div class="row">
		<!-- 				搜索输入框 -->
		<div class="col-lg-5 col-sm-5 col-md-5 col-xs-5">
			<div class="input-group">
				<input type="input" id="input-search" name="name" class="form-control"
					placeholder="快速搜索..."> <span class="input-group-btn">
					<button class="btn btn-default" id="reset_btn" type="button">Search</button>
				</span>
			</div>
		</div>
		<!--  菜单等级下拉框 -->
		<div class="btn-group">
				<select id="level_1" class="btn btn-primary  form-control" name="department" data-live-search="false" ><!-- disabled -->
