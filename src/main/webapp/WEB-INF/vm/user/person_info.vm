<link href="#springUrl('/css/bootstrap-datetimepicker.css')"
	rel="stylesheet">
<link href="#springUrl('/css/bootstrapValidator.css')" rel="stylesheet">
<script type="text/javascript"
	src="#springUrl('/js/bootstrap-datetimepicker.js')"></script>
<script type="text/javascript"
	src="#springUrl('/js/bootstrap-datetimepicker.fr.js')"></script>
<script type="text/javascript"
	src="#springUrl('/js/bootstrap-datetimepicker.zh-CN.js')"></script>
<script src="#springUrl('/js/bootstrapValidator.js')"></script>
<div class="modal-dialog" style="z-index: 9999">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"
				aria-hidden="true">×</button>
			<h4 class="modal-title" id="myModalLabel">
				修改个人信息<input type='hidden'></input>
			</h4>
		</div>
		<div class="modal-body">
			<form>
				<div class=" row"
					style="width: 100%; height: 100%; margin-left: 0px;">
					<div class=" col-md-4 col-sm-4">
						<!-- 头像框 -->
						<div style="width: 80%;">
							<div class=""
								style="width: 100%; border-radius: 50%; -moz-border-radius: 50%; -webkit-border-radius: 50%; overflow: hidden; box-shadow: 1px 1px 10px #C0C0C0;">
								<img alt="头像" style="width: 100%;"
									src="#if(${user.himg})#springUrl(${user.himg}) #else #springUrl('/images/headM.png')#end">
							</div>
						</div>
					</div>
					<div class="col-md-8 col-sm-8 row">
						<div class="form-group col-md-6 col-sm-12">
							<label for="name" class=" control-label">姓名:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.name}" id="name"
									placeholder="请输入名">
							</div>
						</div>
						<div class="form-group col-md-6 col-sm-12">
							<label for="birthday" class=" control-label">出生年月:</label> <input
								class="form_datetime form-control" type="text"
								value="$!{user.birthday}" size="16" id="birthday" readonly> <span
								class="add-on"><i class="icon-th"></i></span>
						</div>
						<div class="form-group col-md-6 col-sm-12">
							<label for="email" class=" control-label">电子邮箱:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.email}" id="email"
									placeholder="请输入名">
							</div>
						</div>
						<div class="form-group col-md-6 col-sm-12">
							<label for="phone" class=" control-label">联系电话:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.phone}" id="phone"
									placeholder="请输入名">
							</div>
						</div>
						<div class="form-group col-md-6 col-sm-12">
							<label for="idcard" class=" control-label">身份证号:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.email}" id="idcard"
									placeholder="身份证号">
							</div>
						</div>
						<div class="form-group col-md-6 col-sm-12">
							<label for="censusaddress" class=" control-label">户籍地址:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.email}" id="censusaddress"
									placeholder="户籍地址">
							</div>
						</div>
						<div class="form-group col-md-6 col-sm-12">
							<label for="homeaddress" class=" control-label">现家庭住址:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.email}" id="homeaddress"
									placeholder="现家庭住址">
							</div>
						</div>
						<div class="form-group col-md-6 col-sm-12">
							<label for="wechatorqq" class=" control-label">微信/QQ:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.email}" id="wechatorqq"
									placeholder="微信/QQ">
							</div>
						</div>
						<div class="form-group col-md-12 col-sm-12">
							<label for="remarkinfo" class=" control-label">个人信息备注:</label>
							<div class="">
								<input type="text" class="form-control" value="$!{user.email}" id="wechatorqq"
									placeholder="个人信息备注">
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal"
				id="close_btn">关闭</button>
			<button type="button" class="btn btn-primary" id="submit_btn">提交更改</button>
		</div>
	</div>
</div>






<script type="text/javascript">
	$(".form_datetime").datetimepicker({
		format : "yyyy-mm-dd",
		autoclose : true,
		todayBtn : true,
		todayHighlight : true,
		showMeridian : true,
		pickerPosition : "bottom-left",
		language : 'zh-CN',//中文，需要引用zh-CN.js包
		startView : 2,//月视图
		minView : 2
	//日期时间选择器所能够提供的最精确的时间选择视图
	});
</script>
