<link href="#springUrl('/css/bootstrap-datetimepicker.css')" rel="stylesheet">
<link href="#springUrl('/css/bootstrapValidator.css')" rel="stylesheet">
<script type="text/javascript" src="#springUrl('/js/bootstrap-datetimepicker.js')"></script>
<script type="text/javascript" src="#springUrl('/js/bootstrap-datetimepicker.fr.js')"></script>
<script type="text/javascript" src="#springUrl('/js/bootstrap-datetimepicker.zh-CN.js')"></script>
<script src="#springUrl('/js/bootstrapValidator.js')"></script>
<div class="panel-heading">
	$!{title}
	<!-- 	<button type="button" class="close close_panel"> -->
	<!-- 		<span>&times;</span> -->
	<!-- 	</button> -->
</div>

<div class="" style="width:100%;overflow: auto;height:100%;padding: 10px 10px 10px 10px;">
	<div class=" row" style="width:100%;height:100%;margin-left: 0px;">
		<div class=" col-md-4 col-sm-4">
			<!-- 头像框 -->
			<div style="width: 80%;">
				<div class=""
					style="width: 100%; border-radius: 50%; -moz-border-radius: 50%; -webkit-border-radius: 50%; overflow: hidden; box-shadow: 1px 1px 10px #C0C0C0;">
					<img alt="头像" style="width: 100%;"
						src="#if(${user.himg})#springUrl('/${user.himg}') #else #springUrl('/images/headM.png')#end">
				</div>
			</div>
		</div>
		<div class="col-md-8 col-sm-8 row">
			<div class="form-group col-md-6 col-sm-12">
				<label for="name" class=" control-label"
					>姓名:</label>
				<div class="">
					<input type="text" class="form-control" id="name"
						placeholder="请输入名">
				</div>
			</div>
			<div class="form-group col-md-6 col-sm-12">
				<label for="birthday" class=" control-label"
					>出生年月:</label>
				<input class="form_datetime form-control" type="text" value="2016-03-07" size="16" id="birthday" readonly>
				<span class="add-on"><i class="icon-th"></i></span>
			</div>
			<div class="form-group col-md-6 col-sm-12">
				<label for="email" class=" control-label"
					>电子邮箱:</label>
				<div class="">
					<input type="text" class="form-control" id="email"
						placeholder="请输入名">
				</div>
			</div>
			<div class="form-group col-md-6 col-sm-12">
				<label for="phone" class=" control-label"
					>联系电话:</label>
				<div class="">
					<input type="text" class="form-control" id="phone"
						placeholder="请输入名">
				</div>
			</div>
			<div class="form-group col-md-6 col-sm-12">
				<label for="idcard" class=" control-label"
					>身份证号:</label>
				<div class="">
					<input type="text" class="form-control" id="idcard"
						placeholder="身份证号">
				</div>
			</div>
			<div class="form-group col-md-6 col-sm-12">
				<label for="censusaddress" class=" control-label"
					>户籍地址:</label>
				<div class="">
					<input type="text" class="form-control" id="censusaddress"
						placeholder="户籍地址">
				</div>
			</div>
			<div class="form-group col-md-6 col-sm-12">
				<label for="homeaddress" class=" control-label"
					>现家庭住址:</label>
				<div class="">
					<input type="text" class="form-control" id="homeaddress"
						placeholder="现家庭住址">
				</div>
			</div>
			<div class="form-group col-md-6 col-sm-12">
				<label for="wechatorqq" class=" control-label"
					>微信/QQ:</label>
				<div class="">
					<input type="text" class="form-control" id="wechatorqq"
						placeholder="微信/QQ">
				</div>
			</div>
			<div class="form-group col-md-12 col-sm-12">
				<label for="remarkinfo" class=" control-label"
					>个人信息备注:</label>
				<div class="">
					<input type="text" class="form-control" id="wechatorqq"
						placeholder="个人信息备注">
				</div>
			</div>
		</div>
	</div>
	

</div>



<div style="bottom: 10px; position: absolute; right: 10px;">
	<span type="button" class="btn btn-default close_panel_btn"
		style="bottom: 10px; float: right; right: 10px; margin: 2px;">关闭</span>
	<span type="button" class="btn btn-primary"
		style="bottom: 10px; float: right; right: 10px; margin: 2px;">保存</span>
</div>


<script type="text/javascript">
 $(".form_datetime").datetimepicker({
	 format: "yyyy-mm-dd",
	 autoclose: true,
	 todayBtn: true,
	 todayHighlight: true,
	 showMeridian: true,
	 pickerPosition: "bottom-left",
	 language: 'zh-CN',//中文，需要引用zh-CN.js包
	 startView: 2,//月视图
	 minView: 2//日期时间选择器所能够提供的最精确的时间选择视图
 });
</script> 
<script>
	$('.close_panel_btn,.close_panel').on("click", function() {
		$('#window-viwe').empty().hide();
	});
</script>