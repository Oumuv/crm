<style>
.thumbnail {
	box-shadow: 0px 0px 10px #e6e6e6;
	padding-top: 8px;
	background: #fdfdfd;
}

.thumbnail .glyphicon-fullscreen {
	position: relative;
	color: #909090
}

.thumbnail .head_img {
	width: 68%;
	border-radius: 50%;
	-moz-border-radius: 50%;
	-webkit-border-radius: 50%;
	overflow: hidden;
}

.thumbnail .name_title {
	text-align: center;
	margin-top: 1px;
	margin-bottom: 1px;
	color: #337ab7;
	font-weight: 600;
}
.glyphicon_btns{
	transition: all 0.3s;
}
.glyphicon_btns:hover{
	color:#4e4c4c;
}
</style>


#foreach($user in $users)
<div class="col-sm-3 col-md-3">
	<div class="thumbnail" style="">
		<input type="hidden" class="uid" value="$user.id">
		<span class="glyphicon glyphicon-fullscreen fullscreen_btn glyphicon_btns" style="">
		</span> <img
			class="head_img" src=#if($!{user.himg}) "#springUrl($!{user.himg})" #else"#springUrl('/images/headM.png')"#end style=""
			alt="图片丢失">
		<div class="caption">
			<h4 class="name_title" style="" title="离线">
				&nbsp;&nbsp;$!{user.name}&nbsp;<img
					src="#springUrl('/images/icon/gray.png')" style="width: 7px;">
			</h4>
			<p style="text-align: center; color: #337ab7;">$!{user.departmentEntity.name}</p>
			<p style="text-align: right; margin-bottom: 1px;">
				<span class="glyphicon glyphicon-pencil glyphicon_btns" title="编辑"></span>
			</p>
		</div>
	</div>
</div>

#end

<script>

	$('.fullscreen_btn').click(function(){
		var uid = $(this).prev().val();
	})
</script>