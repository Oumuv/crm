<style>
li {
	text-align: center;
}

.test {
	border: 1px red solid;
}

#nav {
	width: 200px;
	margin-top: 50px;
}

#nav .collapse {
	width: 100%;
	padding: 0px;
}

.nav_div {
	width: 20%;
	float: left;
	padding-left: 5px;
	padding-top: 2px;
}

.nav_div>div {
	margin-top: 10px;
	margin-bottom: 10px;
}

.nav_div nav,.nav_div>div {
	box-shadow: 1px 1px 8px #C0C0C0;
}

#nav_btn {
	display: none;
}

.word_div {
	float: right;
	width: 79%;
	top: 0px;
	padding: 10px 10px 10px 10px;
}
.charts_a{
		height: 400px;
	}
	
@media screen and (max-width:910px) and (min-width:480px) {
}

@media screen and (max-width:480px) {
	#nav {
		width: 200px;
		margin-top: -50px;
		float: right;
		right: 0px;
		position: relative;
	}
	#nav .collapse {
		position: fixed;
		width: 200px;
		margin-top: 50px;
		background: white;
	}
	#nav_btn {
		display: block;
		position: fixed;
		right: 10px;
		top: 9px;
		background: #4f9fcf;
		border: 0px;
	}
	.nav_div,.calendar_div {
		display: none;
	}
	.nav_div {
		width: 200px;
		float: right;
		margin-top: 2px;
		position: fixed;
		z-index: 9999;
		right: 1px;
	}
	.word_div {
		float: none;
		width: 100%;
	}
	.nav-stacked>li+li {
		margin-top: 0px;
	}
	.nav-stacked>li {
		background: white;
	}
	.charts_a{
		height: 300px;
	}
}
</style>
<!-- 引入 ECharts 文件 -->
<script src="#springUrl('/js/echarts.min.js')"></script>
<script src="#springUrl('/js/bootstrap-treeview.js')"></script>
<div class="">
	<span class="btn glyphicon glyphicon-option-horizontal" id="nav_btn"
		style="color: white; z-index: 999" onclick="nav_control()"></span>
	<!-- 导航模块 -->
	<div class=" nav_div">
		<nav style="border-radius: 8px 8px 0px 0px;" class=" nav_list">
			<ul id="navigation_ul" class="nav nav-pills nav-stacked " style="width: 100%;">
			</ul>
		</nav>
		<!-- 日历 -->
		<div style="width: 100%; height: 320px" class="calendar_div">
			<iframe src="#springUrl('/calendar.html')" height="100%" width="100%"
				scrolling="no" style="border: 0px; padding: 1px;"></iframe>
		</div>
	</div>
<!-- 位置导航 -->
	<div class="position_div" style="color: #337ab7;">
		<span class="btn glyphicon glyphicon-map-marker"></span>
		<span class="" style="font-size: 15px;font-weight: 700;">当前位置：</span>
		<span class="position_span" style="font-size: 10px;font-weight: 600;">系统管理 >> 菜单管理</span>
	</div>
	<!-- word space -->
	<div class="word_div" style="">
		#parse("./word/departmentmanage.vm")
	</div>


</div>
<script type="text/javascript">
$(function(){
	$('#navigation_ul').load("#springUrl('/user/getmenu.do')");
})
</script>

