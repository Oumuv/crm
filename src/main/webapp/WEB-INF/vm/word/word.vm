</div>

<script type="text/javascript">
/*隐藏/显示菜单导航栏*/
function nav_control() {
	$('.nav_div').toggle(300);
	blurback();
}

$(".nav_list>ul>li").click(function(){
	$(".nav_list li").removeClass("active")
	$(this).addClass("active")
})
</script>
